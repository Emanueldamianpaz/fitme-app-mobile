<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ar.davinci.edu">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".views.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.auth0.android.provider.RedirectActivity"
            tools:node="replace">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/com_auth0_domain"
                    android:pathPrefix="/android/${applicationId}/callback"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBAJF-lhWIH_8kyXK6n2v9EItOGzymhyvk" />

        <activity android:name="com.auth0.android.provider.WebAuthActivity" />

        <activity android:name=".views.activities.home.HomeActivity" />
        <activity android:name=".views.activities.training.TrainingSessionActivity" />
        <activity android:name=".views.activities.fitness.walk.WalkActivity" />
        <activity android:name=".views.activities.fitness.DispatchActivity"></activity>
        <activity android:name=".views.activities.account.view.AccountViewActivity"></activity>
        <activity android:name=".views.activities.account.edit.AccountEditActivity"></activity>
        <activity android:name=".views.activities.userRoutine.workout_exercise.WorkoutExerciseActivity" />
        <activity android:name=".views.activities.userRoutine.userRoutine.UserRoutineActivity" />
        <activity android:name=".views.activities.userRoutine.user_experience.UserExperienceActivity" />
        <activity android:name=".views.activities.userRoutine.meal_nutrition.MealNutritionActivity" />
        <activity android:name=".views.activities.training.running_session.RunningSessionActivity" />
        <activity android:name=".views.activities.training.nutrition_session.NutritionSessionActivity" />


        <service android:name=".infraestructure.service.LocationService" />

    </application>

</manifest>