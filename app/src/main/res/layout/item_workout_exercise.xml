<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="20dp"
    android:layout_marginVertical="5dp"
    android:elevation="10dp"
    android:padding="5dp"
    app:cardElevation="6dp">

    <FrameLayout
        android:id="@+id/lytUserExperience"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/workout_exercise" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#78ffffff"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ejercicio"
                    android:textAllCaps="false"
                    android:textColor="@color/text_bold_color"
                    android:textSize="@dimen/title_3"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lblDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:lineSpacingExtra="10sp"
                    android:text="Dificultad"
                    android:textAllCaps="false"
                    android:textColor="@color/text_bold_color"
                    android:textSize="@dimen/description_2"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/lblType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:lineSpacingExtra="10sp"
                    android:text="(Tipo)"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/text_bold_color"
                    android:textSize="@dimen/description_2"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="DescripciÃ³n de la rutina"
                android:textAllCaps="false"
                android:textColor="@color/text_bold_color"
                android:textSize="@dimen/description_1" />

        </LinearLayout>


    </FrameLayout>
</RelativeLayout>

