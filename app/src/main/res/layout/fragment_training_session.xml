<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.training.TrainingSessionFragment">


    <TextView
        android:id="@+id/lblMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/heavy_margin"
        android:text="@string/message_label"
        android:textAlignment="center"
        android:textColor="@color/text_bold_color"
        android:textSize="@dimen/title_1"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/heavy_margin"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/medium_margin"
        android:text="@string/start_walk"
        android:textColor="@color/white_color" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cardCalories"
        android:layout_marginHorizontal="@dimen/light_margin"
        android:layout_marginVertical="@dimen/light_margin"
        android:background="@android:color/darker_gray" />


    <ListView
        android:id="@+id/listItemTrainingSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divider"
        android:layout_margin="@dimen/activity_horizontal_margin" />

    <RelativeLayout
        android:id="@+id/fragmentNoResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/divider"
        android:padding="@dimen/activity_horizontal_margin" />

</LinearLayout>