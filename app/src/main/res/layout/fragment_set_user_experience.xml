<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/heavy_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/heavy_margin"
        android:text="@string/how_is_your_experience"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/editScoringUserExpereience"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/editUserMessage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:hint="@string/message_user_experience"
        android:inputType="text|textMultiLine" />
</LinearLayout>