<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="20dp"
    android:layout_marginVertical="5dp"
    android:elevation="10dp"
    android:padding="5dp"
    app:cardElevation="6dp">

    <FrameLayout
        android:id="@+id/lytUserExperience"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/workout_exercise" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#78ffffff"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblScoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi puntuaciÃ³n: "
                    android:textAllCaps="false"
                    android:textColor="@color/text_bold_color"
                    android:textSize="@dimen/title_3"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/lblCoachTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tip del coach: "
                android:textAllCaps="false"
                android:textColor="@color/text_bold_color"
                android:textSize="@dimen/description_1"
                android:textStyle="italic" />

        </LinearLayout>


    </FrameLayout>
</RelativeLayout>

